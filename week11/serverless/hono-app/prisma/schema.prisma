generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

// constraints are defined using @
model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  firstName String
  lastName  String?
  password  String
  todos     Todo[]
}

model Todo {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  done        Boolean @default(false)
  userId      Int
  User        User    @relation(fields: [userId], references: [id])
}
